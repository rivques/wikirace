{
    "name": "Wikirace",
    "description": "An extension to assist with Wikipedia races",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_title": "Click to open WikiRace"
      },
    "permissions": [
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
        "*://*.wikipedia.org/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}