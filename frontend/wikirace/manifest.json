{
    "name": "Wikirace",
    "description": "An extension to assist with Wikipedia races",
    "version": "1.1",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "Click to open WikiRace"
      },
    "host_permissions": [
        "*://*.wikipedia.org/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://*.wikipedia.org/*"],
            "js": ["content.js"],
            "all_frames": true,
            "run_at": "document_idle"
        }
    ]
}