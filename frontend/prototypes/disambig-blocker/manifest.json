{
    "name": "Disambig blocker",
    "description": "Block disambiguation pages",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
      },
    "permissions": [
        "declarativeNetRequest"
    ],
    "declarative_net_request": {
        "rule_resources": [{
                "id": "block_disambig",
                "enabled": true,
                "path": "block_disambig.json"
            },
            {
                "id": "block_external",
                "enabled": true,
                "path": "block_external.json"
            }]
    },
    "host_permissions": [
        "*://*.wikipedia.org/*"
    ]
}